<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:paddingLeft="@dimen/activity_horizontal_margin"
                                                   android:paddingTop="@dimen/activity_vertical_margin"
                                                   android:paddingRight="@dimen/activity_horizontal_margin"
                                                   android:paddingBottom="@dimen/activity_vertical_margin"
                                                   tools:context=".ui.movielist.MovieListActivity"
                                                   android:background="#2F4F4F">
    <TextView
            android:text="Num Results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/numResults"
            android:textColor="@color/yellow" android:textSize="16sp"
            android:textStyle="bold" android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ListView
            android:id="@+id/list"
            android:layout_width="380dp"
            android:layout_height="620dp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="-1dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/numResults"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/next"
            app:layout_constraintTop_toBottomOf="@+id/list" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/prev"
            app:layout_constraintTop_toBottomOf="@+id/list" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/page"
            android:textColor="@color/yellow" app:layout_constraintEnd_toStartOf="@+id/next"
            app:layout_constraintStart_toEndOf="@+id/prev" android:textSize="24sp"
            android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/noResults" tools:layout_editor_absoluteY="5dp"
            tools:layout_editor_absoluteX="194dp" android:textColor="@color/yellow" android:textStyle="bold"
            android:textSize="20sp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>